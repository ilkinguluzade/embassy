                                                    <% } %>
                                                    <li><a href="?page=<%= totalPages %>&tab=activityTab"><%= totalPages %></a></li>
                                                <% } %>

                                                <% if (currentPage < totalPages) { %>
                                                    <li>
                                                        <a href="?page=<%= currentPage + 1 %>&tab=activityTab"><i class="bi bi-arrow-right"></i></a>
                                                    </li>
                                                <% } %>
